<%= simple_form_for(@post)do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :post, label: t('text_about_it'), input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: t('new_post_text'), autofocus: true %>
  </div>
</div>
<%= f.button :submit, value: t('submit'), class: "button is-info" %>
<%end%>
